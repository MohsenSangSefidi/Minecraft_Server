{
  "name": "Forge Minecraft Server with Custom Gateway",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17",
      "installMaven": false,
      "installGradle": false
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [
    25565,
    8080,
    8081,
    3000,
    25575
  ],
  "portsAttributes": {
    "25565": {
      "label": "Minecraft Server",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Gateway API",
      "onAutoForward": "notify"
    },
    "8081": {
      "label": "Web Dashboard",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "Admin Panel",
      "onAutoForward": "notify"
    },
    "25575": {
      "label": "RCON",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "pip install -r requirements.txt && python scripts/setup_forge.py",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "redhat.java"
      ]
    }
  },
  "remoteEnv": {
    "MINECRAFT_VERSION": "1.20.1",
    "FORGE_VERSION": "47.2.0",
    "SERVER_MAX_MEMORY": "4G"
  }
}